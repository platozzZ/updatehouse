}
checkbox::before{
  content: ''!important;
  color: #0060e4!important;
}
checkbox .wx-checkbox-input {
  border-radius: 4rpx;
  height: 38rpx;
  width: 38rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: 1rpx solid #0060e4!important;
  background: rgba(255,255,255,0)!important;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #0060e4!important;
  font-size: 36rpx!important;
  display: block;
}
.cu-bar.foot{
  box-shadow: none;
}
.btn-pay{
  width: 100%;
}
.btn-pay .cu-btn{
  height: 110rpx;
  border-radius: 0;
  padding: 0 80rpx;
  font-size: 30rpx;
  width: auto;
}
.btn-pay .cu-btn::after{
  border-radius: 0;
}
.btn-pay>view{
  height: 110rpx;
  border: 1rpx solid #0060e4;
  /* border-bottom: 1rpx solid #0060e4; */
}

.geturlCotent{
