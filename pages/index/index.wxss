.banner-img{
  width: 100%;
  height: auto;
}
.textarea{
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #cecece;
  word-break: break-all;
}
.geturlImg{
  width: 26rpx;
  height: 26rpx;
}
.cu-list.menu>.cu-item .content{
  line-height: 1
}
.cu-list.menu>.cu-item .content>image.sourceIcon{
  width: 40rpx;
